<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewmodel"
            type="com.ztind.sample.fragment.HomeViewModel" />
    </data>

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="进入TwoActivity"
            android:gravity="center"
            android:onClick="@{()->viewmodel.goAty()}"
            android:textColor="@color/white"
            android:background="#3F51B5"
            android:layout_width="200dp"
            android:layout_height="40dp"/>
        <TextView
            android:text="网络请求demo"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:onClick="@{()->viewmodel.goNetworkDemoAty()}"
            android:textColor="@color/white"
            android:background="#3F51B5"
            android:layout_width="200dp"
            android:layout_height="40dp"/>
        <TextView
            android:text="DialogX ios"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:onClick="@{()->viewmodel.iosDialog()}"
            android:textColor="@color/white"
            android:background="#3F51B5"
            android:layout_width="200dp"
            android:layout_height="40dp"/>
    </LinearLayout>
</layout>