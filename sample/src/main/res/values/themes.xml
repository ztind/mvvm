<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KotlinMvvmJetpackAndroidProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--启动页style-->
    <style name="SplashStyle" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/mt_splash</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--tab文字没有选中的样式-->
    <style name="bottom_normal_text">
        <item name="android:textColor">@color/color_tab_normal</item>
        <item name="android:textSize">10sp</item>
    </style>
    <!--tab文字选中的样式-->
    <style name="bottom_selected_text">
        <item name="android:textColor">@color/color_tab_select</item>
        <item name="android:textSize">10sp</item>
    </style>
</resources>